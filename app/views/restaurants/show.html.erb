<% if @restaurant.image_url.nil? == false %>
  <%= image_tag @restaurant.image_url %>
<% else %>
  No image avaliable
<% end %>
<p>
  <strong>Name : </strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Text : </strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Address 1 : </strong>
  <%= @restaurant.address1 %>
</p>

<p>
  <strong>Address 2 : </strong>
  <%= @restaurant.address2 %>
</p>
<p>
  <strong>City / Town : </strong>
  <%= @restaurant.city %>
</p>

<p>
  <strong>County : </strong>
  <%= @restaurant.county %>
</p>

<p>
  <strong>Post code : </strong>
  <%= @restaurant.postcode %>
</p>

<%= link_to 'View Restaurants', restaurants_path %>
