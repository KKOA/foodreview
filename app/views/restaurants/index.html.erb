<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>


<h1>Restaurants</h1>
<%= link_to 'Add Restaurant', new_restaurant_path %>
<% if @restaurants.count > 0 %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.description %></td>
      <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
    </tr>
  <% end %>
</table>
<% else %>
  <p> No restaurants avaliable </p>
<% end %>
